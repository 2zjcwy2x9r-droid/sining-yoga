/* pages/booking/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 周日期选择器 - 更简洁的风格 */
.week-selector {
  background: white;
  padding: 24rpx 0;
  border-radius: 0;
  position: relative;
  z-index: 2;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.week-scroll {
  white-space: nowrap;
  width: 100%;
}

.week-container {
  display: inline-flex;
  padding: 0 20rpx;
  gap: 20rpx;
}

.week-day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 90rpx;
  padding: 16rpx 20rpx;
  position: relative;
  transition: all 0.3s;
}

.week-day-item.selected {
  border-bottom: 4rpx solid #007aff;
}

.week-day-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.week-day-item.selected .week-day-label {
  color: #007aff;
  font-weight: 500;
}

.week-day-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.week-day-item.selected .week-day-number {
  color: #007aff;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 课程容器 */
.classes-container {
  padding: 20rpx;
}

/* 课程列表 */
.classes-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 课程卡片 - 更符合示意图的风格 */
.class-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.class-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 课程头部 - 标题和价格 */
.class-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.class-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  line-height: 1.4;
  padding-right: 20rpx;
}

.class-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b6b;
  white-space: nowrap;
}

/* 课程信息 */
.class-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.info-icon {
  font-size: 28rpx;
  width: 32rpx;
  text-align: center;
  flex-shrink: 0;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  line-height: 1.5;
}

/* 课程底部 - 参与人数和按钮 */
.class-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.class-participants {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.participant-avatars {
  display: flex;
  gap: -8rpx;
}

.avatar-placeholder {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 2rpx solid white;
  margin-left: -8rpx;
}

.avatar-placeholder:first-child {
  margin-left: 0;
}

.participant-text {
  font-size: 24rpx;
  color: #666;
}

/* 预订按钮 - 蓝色风格 */
.book-button {
  padding: 14rpx 32rpx;
  background: #007aff;
  color: white;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s;
  min-width: 120rpx;
}

.book-button:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 122, 255, 0.2);
}

.book-button.disabled {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}
