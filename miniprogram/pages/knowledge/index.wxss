/* pages/knowledge/index.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: white;
  border-bottom: 1px solid #e0e0e0;
}

.back-btn {
  margin-right: 20rpx;
  color: #667eea;
  font-size: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
}

.list {
  padding: 20rpx;
}

.base-item {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.base-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.base-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.base-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.meta-item {
  margin-right: 20rpx;
}

.item {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.item-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

