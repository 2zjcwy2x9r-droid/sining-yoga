/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部渐变背景区域 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 60rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.welcome {
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 300;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.classes-container {
  padding: 0 20rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 2;
}

.day-section {
  margin-bottom: 30rpx;
}

.day-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  margin-bottom: 2rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.1);
}

.day-label {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.day-date {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.classes-list {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.1);
}

.class-card {
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
  position: relative;
}

.class-card:active {
  background-color: #f8f9fa;
  transform: scale(0.98);
}

.class-card:last-child {
  border-bottom: none;
}

.class-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.class-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.class-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

.class-status.available {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
}

.class-status.full {
  background: #ffebee;
  color: #c62828;
}

.class-info {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  margin-bottom: 18rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.info-icon {
  font-size: 28rpx;
  width: 32rpx;
  text-align: center;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.class-desc {
  margin-top: 18rpx;
  padding: 18rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f0f0 100%);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  border-left: 4rpx solid #667eea;
}
