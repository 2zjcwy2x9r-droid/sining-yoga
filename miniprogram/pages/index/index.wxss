/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f7;
  padding-bottom: 40rpx;
}

/* Banner区域 - 紫色渐变 */
.banner {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 100rpx 40rpx 60rpx;
  overflow: hidden;
}

.banner-decoration {
  position: absolute;
  top: -100rpx;
  right: -50rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.banner-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.banner-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  letter-spacing: 1rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 周列表容器 */
.week-list {
  padding: 20rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
}

/* 周列表项 */
.week-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
  border-left: 4rpx solid #e0e0e0;
}

.week-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.15);
}

.week-item.has-classes {
  border-left-color: #667eea;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
}

.week-item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.week-day-info {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.week-day-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.week-date {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.week-classes-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.week-classes-count {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.week-classes-time {
  font-size: 24rpx;
  color: #666;
}

.week-no-classes {
  margin-top: 8rpx;
}

.no-classes-text {
  font-size: 26rpx;
  color: #ccc;
}

.week-item-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.week-badge {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.week-arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

.week-item.has-classes .week-arrow {
  color: #667eea;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 弹窗内容 */
.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.modal-title {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.modal-day-name {
  font-size: 40rpx;
  font-weight: bold;
}

.modal-date {
  font-size: 24rpx;
  opacity: 0.9;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: white;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-weight: 300;
}

/* 弹窗主体 */
.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* 弹窗课程列表 */
.modal-classes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 弹窗课程卡片 */
.modal-class-card {
  display: flex;
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-left: 4rpx solid #667eea;
  transition: all 0.3s;
}

.modal-class-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.modal-class-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 140rpx;
  padding-right: 24rpx;
  border-right: 2rpx solid #e8e8e8;
  margin-right: 24rpx;
}

.modal-time-range {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.modal-time-duration {
  font-size: 22rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.modal-class-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.modal-class-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.modal-class-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.modal-class-status {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  margin-left: 16rpx;
}

.modal-class-status.available {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
}

.modal-class-status.full {
  background: #ffebee;
  color: #c62828;
}

.modal-class-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.modal-detail-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.modal-detail-label {
  color: #999;
  min-width: 100rpx;
}

.modal-detail-value {
  color: #666;
  flex: 1;
}

/* 弹窗空状态 */
.modal-empty {
  text-align: center;
  padding: 100rpx 0;
}

.modal-empty-text {
  font-size: 28rpx;
  color: #ccc;
}
