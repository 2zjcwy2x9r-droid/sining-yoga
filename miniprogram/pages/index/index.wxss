/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f7;
  padding-bottom: 40rpx;
}

/* Banner区域 - 紫色渐变 */
.banner {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 100rpx 40rpx 60rpx;
  overflow: hidden;
}

.banner-decoration {
  position: absolute;
  top: -100rpx;
  right: -50rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.banner-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.banner-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  letter-spacing: 1rpx;
}

/* 周一到周日标签栏 */
.week-tabs {
  background: white;
  padding: 20rpx 0;
  margin-top: -20rpx;
  border-radius: 30rpx 30rpx 0 0;
  position: relative;
  z-index: 2;
  box-shadow: 0 -4rpx 20rpx rgba(102, 126, 234, 0.1);
}

.tabs-scroll {
  white-space: nowrap;
  width: 100%;
}

.tabs-container {
  display: inline-flex;
  padding: 0 20rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  padding: 20rpx 24rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  background: #f5f5f7;
  position: relative;
  transition: all 0.3s;
}

.tab-item.has-classes {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tab-item.has-classes .tab-day,
.tab-item.has-classes .tab-date {
  color: white;
}

.tab-day {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.tab-date {
  font-size: 22rpx;
  color: #999;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 课程容器 */
.classes-container {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

/* 每天课程区域 */
.day-section {
  margin-bottom: 40rpx;
}

.day-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  margin-bottom: 2rpx;
}

.day-title {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.day-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.day-date {
  font-size: 24rpx;
  color: #999;
}

.day-count {
  font-size: 24rpx;
  color: #667eea;
  background: #f0f2ff;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

/* 课程列表 */
.classes-list {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.08);
}

/* 课程卡片 */
.class-card {
  display: flex;
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  border-left: 4rpx solid #667eea;
}

.class-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.15);
}

.class-card:last-child {
  margin-bottom: 0;
}

/* 时间区域 */
.class-time-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  padding-right: 24rpx;
  border-right: 2rpx solid #e8e8e8;
  margin-right: 24rpx;
}

.class-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.class-duration {
  font-size: 22rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 课程内容区域 */
.class-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.class-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.class-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.class-status {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  margin-left: 16rpx;
}

.class-status.available {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
}

.class-status.full {
  background: #ffebee;
  color: #c62828;
}

/* 课程信息 */
.class-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.info-label {
  color: #999;
  min-width: 80rpx;
}

.info-value {
  color: #666;
  flex: 1;
}

/* 空状态 */
.empty-day {
  background: white;
  border-radius: 0 0 20rpx 20rpx;
  padding: 80rpx 0;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.08);
}

.empty-text {
  font-size: 28rpx;
  color: #ccc;
}
